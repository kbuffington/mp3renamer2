{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "es2020",
		"downlevelIteration": true,
    "moduleResolution": "node",
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2020",
			"dom"
        ],
        "paths": {
            "@components/*": ["app/components/*"],
            "@directives/*": ["app/directives/*"],
            "@services/*": ["app/services/*"]
        }
	}
}